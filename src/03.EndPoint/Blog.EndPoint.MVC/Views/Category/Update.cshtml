@using Blog.Domain.Core.Dtos.CategoryDtos
@model ShowCategoriesDto
@{
    Layout = ""; 
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ویرایش دسته‌بندی</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v30.1.0/dist/font-face.css" rel="stylesheet" type="text/css" />

    <style>
        body {
            background-color: #3b4a6b;
            font-family: 'Vazir', sans-serif;
        }

        .card {
            background-color: #526180;
            border-radius: 12px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.4);
        }

        .form-control::placeholder {
            color: #dcdcdc;
            font-style: italic;
        }

        .btn-submit {
            background-color: #ff8c42;
            color: #fff;
            transition: 0.2s;
        }

            .btn-submit:hover {
                background-color: #e57620;
            }
    </style>
</head>
<body>
    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4" style="width: 350px;">
            <h2 class="text-center text-white mb-4">ویرایش دسته‌بندی</h2>

            <form asp-action="Update" method="post">
                <input type="hidden" name="Id" value="@Model.Id" />

                <div class="mb-3">
                    <label for="Title" class="form-label text-white">عنوان دسته‌بندی</label>

                    <input type="text"
                           class="form-control bg-light text-dark border-0"
                           id="Title"
                           name="Title"
                           placeholder="@Model.Title" />
                </div>

                <button type="submit" class="btn btn-submit w-100">ثبت تغییرات</button>
            </form>

            <div id="message-box" class="mt-4 text-center text-sm">
                <div style="color:red">@ViewBag.Error</div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


