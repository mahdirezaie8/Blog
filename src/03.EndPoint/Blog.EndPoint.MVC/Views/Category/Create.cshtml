@{
	Layout = "";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="d-flex justify-content-center align-items-center vh-100" style="background-color: #3b4a6b;">
    <div class="card p-4" style="width: 350px; background-color: #526180; border-radius: 12px; box-shadow: 0 8px 25px rgba(0,0,0,0.4);">
        <h2 class="text-center text-white mb-4">ایجاد دسته‌بندی</h2>

        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label for="Title" class="form-label text-white">عنوان دسته‌بندی</label>
                <input type="text" class="form-control bg-light text-dark border-0" id="Title" name="Title" required>
            </div>

            <button type="submit" class="btn w-100" style="background-color: #ff8c42; color: #fff;">ثبت</button>
        </form>
        <div id="message-box" class="mt-4 text-center text-sm">
            <div style="color:red">@ViewBag.Error</div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>



