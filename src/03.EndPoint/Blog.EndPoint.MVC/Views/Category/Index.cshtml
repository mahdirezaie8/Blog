@using Blog.Domain.Core.Dtos.CategoryDtos
@model List<ShowCategoriesDto>
@{
	Layout = "";
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
	<meta charset="UTF-8">
	<title>مدیریت دسته‌بندی‌ها</title>

	<link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@300;400;700&display=swap" rel="stylesheet">

	<style>
		body {
			background: #1f1f2b;
			color: #ddd;
			font-family: "Vazirmatn";
			padding: 30px;
		}

		h2 {
			text-align: center;
			margin-bottom: 25px;
			color: #7c5dfa;
		}

		.top-bar {
			display: flex;
			justify-content: flex-end;
			margin-bottom: 20px;
		}

		.btn-primary {
			background: #7c5dfa;
			padding: 10px 20px;
			color: white;
			text-decoration: none;
			border-radius: 10px;
			font-weight: bold;
			transition: 0.2s;
		}
		.btn-primary:hover { background: #6a49d9; }

		table {
			width: 100%;
			border-collapse: collapse;
			background: #2b2b3c;
			border-radius: 10px;
			overflow: hidden;
		}

		th, td {
			padding: 14px;
			border-bottom: 1px solid #3c3c4e;
			text-align: center;
		}

		th {
			background: #242430;
			color: #aaa;
		}

		.btn-edit {
			background: #3b82f6;
			color: white;
			padding: 6px 12px;
			border-radius: 6px;
			text-decoration: none;
		}
		.btn-edit:hover { background: #2563eb; }

		.btn-delete {
			background: #ef4444;
			color: white;
			padding: 6px 12px;
			border-radius: 6px;
			text-decoration: none;
		}
		.btn-delete:hover { background: #dc2626; }
	</style>
</head>

<body>

<h2>مدیریت دسته‌بندی‌ها</h2>

<div class="top-bar">
	<a asp-action="Create" class="btn-primary">ایجاد دسته‌بندی جدید</a>
</div>

@if (Model != null && Model.Count > 0)
{
	<table>
		<thead>
			<tr>
				<th>ردیف</th>
				<th>عنوان دسته‌بندی</th>
				<th>عملیات</th>
			</tr>
		</thead>

		<tbody>
			@{
				int row = 1;
			}
			@foreach (var item in Model)
			{
				<tr>
					<td>@row</td>
					<td>@item.Title</td>
					<td>
						<a asp-action="Update" asp-route-id="@item.Id" class="btn-edit">ویرایش</a>
						<a asp-action="Delete" asp-route-id="@item.Id" class="btn-delete">حذف</a>
					</td>
				</tr>
				row++;
			}
		</tbody>
	</table>
}
else
{
	<h3 style="text-align:center; color:#f87171;">هیچ دسته‌بندی یافت نشد.</h3>
}
	<div id="message-box" class="mt-4 text-center text-sm">
		<div style="color:red">@ViewBag.Error</div>
	</div>
</body>
</html>


