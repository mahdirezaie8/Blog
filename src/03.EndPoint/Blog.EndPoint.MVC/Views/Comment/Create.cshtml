@model CreateCommentViewModel
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
    <meta charset="UTF-8" />
    <title>ثبت کامنت</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #3b4a6b;
            font-family: Vazir, sans-serif;
            color: #fff;
        }

        .comment-box {
            background-color: #526180;
            padding: 25px;
            border-radius: 12px;
            max-width: 600px;
            margin: 40px auto;
            box-shadow: 0 8px 20px rgba(0,0,0,0.4);
        }

        .star {
            font-size: 28px;
            cursor: pointer;
            color: #777;
        }

            .star.selected {
                color: #ffd700;
            }
    </style>
</head>

<body>

<div class="comment-form-container" style="background:#526180; padding:20px; border-radius:10px; margin-top:20px;">
    <h5 class="mb-3">📝 ثبت کامنت</h5>

    <form method="post" action="/Comment/Create">
        
        <!-- متن کامنت -->
        <div class="mb-3">
            <label class="form-label">متن کامنت</label>
            <textarea name="Text" class="form-control" rows="4" required></textarea>
        </div>

        <!-- امتیاز -->
        <div class="mb-3">
            <label class="form-label">امتیاز</label>
            <select name="Score" class="form-select" required>
                <option value="">انتخاب امتیاز</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
            <input type="hidden" name="PostId" value="@ViewBag.Id" />
        <button type="submit" class="btn btn-warning">ثبت کامنت</button>
    </form>
        <div id="message-box" class="mt-4 text-center text-sm">
            <div style="color:red">@TempData["Error"]</div>
        </div>
</div>


</body>
</html>

