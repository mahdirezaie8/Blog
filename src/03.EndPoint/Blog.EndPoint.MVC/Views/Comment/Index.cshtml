@using Blog.Domain.Core.Dtos.CommentDtos
@model List<ShowManagementCommentDto>
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>پنل مدیریت کامنت‌ها</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Vazir, sans-serif;
            background-color: #3b4a6b;
            color: #fff;
            margin: 0;
        }

        .table-container {
            background-color: #526180;
            border-radius: 12px;
            padding: 20px;
            margin: 30px auto;
            max-width: 1000px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.4);
        }

        .table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

            .table th, .table td {
                vertical-align: middle;
                color: black !important; 
                border-top: none !important;
            }

            .table thead th {
                background-color: #394263 !important; 
                color: #ffd580 !important; 
            }

        .table-hover tbody tr:hover {
            background-color: rgba(255,140,66,0.2) !important;
        }

        .btn-approve {
            background-color: #ff8c42;
            color: #fff;
            border: none;
            padding: 5px 10px;
            border-radius: 5px;
        }

            .btn-approve:hover {
                background-color: #e67a2d;
            }

        .no-comments {
            text-align: center;
            font-size: 1.2rem;
            color: #ffd580;
            padding: 50px 0;
        }
    </style>
</head>
<body>

    <div class="table-container">
        <h3 class="mb-4">پنل مدیریت کامنت‌ها</h3>

        @if (Model != null && Model.Count > 0)
        {
            <table class="table table-hover text-center">
                <thead>
                    <tr>
                        <th>ردیف</th>
                        <th>نام نویسنده</th>
                        <th>ایمیل</th>
                        <th>پست</th>
                        <th>متن کامنت</th>
                        <th>امتیاز</th>
                        <th>وضعیت</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int row = 1;
                    }
                    @foreach (var comment in Model)
                    {
                        <tr>
                            <td>@row</td>
                            <td>@comment.FullName</td>
                            <td>@comment.UserEmail</td>
                            <td>@comment.PostTitle</td>
                            <td>@comment.Text</td>
                            <td>@comment.Score</td>
                            <td>
                                @if (comment.IsActive)
                                {
                                    <span>تایید شده ✅</span>
                                }
                                else
                                {
                                    <form method="get" action="/Comment/Update" style="display:inline;">
                                        <input type="hidden" name="id" value="@comment.Id" />
                                        <button type="submit" class="btn-approve">تایید</button>
                                    </form>
                                }
                            </td>
                        </tr>
                        row++;
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="no-comments">شما کامنت دریافتی ندارید</div>
        }
        <div id="message-box" class="mt-4 text-center text-sm">
            <div style="color:red">@TempData["Error"]</div>
        </div>
    </div>

</body>
</html>




