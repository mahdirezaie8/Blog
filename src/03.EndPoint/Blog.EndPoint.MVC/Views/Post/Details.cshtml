@{
    var comments = TempData["Comments"] as List<ShowPostComment>;
}
@using Blog.Domain.Core.Dtos.CommentDtos
@using Blog.Domain.Core.Dtos.PostDtos
@using Blog.FrameWork
@model ShowPostDto
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>جزئیات پست</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Vazir, sans-serif;
            background-color: #3b4a6b;
            color: #fff;
            margin: 0;
        }

        .container {
            padding: 20px;
        }

        .post-card {
            background-color: #526180;
            border-radius: 12px;
            padding: 20px;
            max-width: 800px;
            margin: 30px auto;
            box-shadow: 0 8px 25px rgba(0,0,0,0.4);
            display: flex;
            flex-direction: column;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .post-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 12px 30px rgba(0,0,0,0.5);
            }

        .post-img-wrapper {
            width: 100%;
            overflow: hidden;
            text-align: center;
            margin-bottom: 15px;
        }

        .post-img {
            width: 100%;
            height: auto;
            max-height: 500px;
            object-fit: contain;
            border-radius: 12px;
        }

        .post-title {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .post-desc {
            font-size: 1rem;
            margin-bottom: 15px;
        }

        .post-meta {
            font-size: 0.9rem;
            color: #ffd580;
        }

        .comment-section {
            margin-top: 20px;
            background-color: #394263;
            border-radius: 12px;
            padding: 15px;
        }

        .comment-toggle-btn {
            background-color: #ff8c42;
            color: #fff;
            border: none;
            border-radius: 6px;
            padding: 5px 10px;
            cursor: pointer;
            margin-bottom: 10px;
        }

            .comment-toggle-btn:hover {
                background-color: #e67a2d;
            }

        .comment-box {
            display: none; 
            max-height: 400px;
            overflow-y: auto;
        }

        .comment-item {
            background-color: #526180;
            padding: 10px;
            border-radius: 8px;
            margin-bottom: 10px;
            color: #fff;
        }

        .comment-meta {
            font-size: 0.8rem;
            color: #ffd580;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="post-card">
            <div class="post-title">@Model.Title</div>

            @if (!string.IsNullOrEmpty(Model.Profile))
            {
                <div class="post-img-wrapper">
                    <img src="@Model.Profile" class="post-img" />
                </div>
            }
            else
            {
                <div class="post-img d-flex justify-content-center align-items-center"
                     style="background-color:#394263; color:#ffd580; padding:60px 0; border-radius:12px;">
                    تصویر ندارد
                </div>
            }

            <div class="post-desc">@Model.Description</div>
            <div class="post-meta">دسته‌بندی: @Model.CategoryTitle | تاریخ: @Model.CreateAt.ToPersianDate()</div>

            <div class="text-center mt-3">
                <a asp-controller="Comment" asp-action="Create" asp-route-Id="@Model.Id" class="btn btn-warning"
                   style="border-radius:8px; font-weight:bold;">
                    ✍️ ثبت کامنت
                </a>
            </div>

            <div class="comment-section">
                <button class="comment-toggle-btn" onclick="toggleComments()">💬 مشاهده کامنت‌ها</button>

                <div class="comment-box" id="comment-box">
                    @if (comments != null && comments.Any())
                    {
                        @foreach (var comment in comments)
                        {
                            <div class="comment-item">
                                <strong>@comment.FullName</strong>
                                <span class="stars">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= (int)comment.Score)
                                        {
                                            <span style="color:#ffd700; font-size:18px;">★</span>
                                        }
                                        else
                                        {
                                            <span style="color:#777; font-size:18px;">★</span>
                                        }
                                    }
                                </span>
                                <br />

                                @comment.Text
                                <br />
                            </div>

                        }
                    }
                    else
                    {
                        <p style="color:#ffd580;">هیچ کامنتی برای این پست ثبت نشده است.</p>
                    }
                </div>
            </div>

        </div>
    </div>

    <script>
        function toggleComments(){
            const box = document.getElementById('comment-box');
            if(box.style.display === 'none' || box.style.display === ''){
                box.style.display = 'block';
            } else {
                box.style.display = 'none';
            }
        }
    </script>

</body>
</html>




