@using Blog.Domain.Core.Dtos.PostDtos
@using Blog.FrameWork
@model ShowPostDto
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>جزئیات پست</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<style>
body {
    font-family: Vazir, sans-serif;
    background-color: #3b4a6b;
    color: #fff;
    margin: 0;
}

.container {
    padding: 20px;
}

.post-card {
    background-color: #526180;
    border-radius: 12px;
    padding: 20px;
    max-width: 800px;
    margin: 30px auto;
    box-shadow: 0 8px 25px rgba(0,0,0,0.4);
    display: flex;
    flex-direction: column;
    transition: transform 0.2s, box-shadow 0.2s;
}

.post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 30px rgba(0,0,0,0.5);
}

.post-img-wrapper {
    width: 100%;
    overflow: hidden;
    text-align: center;
    margin-bottom: 15px;
}

.post-img {
    width: 100%;
    height: auto;
    max-height: 500px;
    object-fit: contain; 
    border-radius: 12px;
}

.post-title {
    font-size: 1.5rem;
    font-weight: bold;
    margin-bottom: 10px;
}

.post-desc {
    font-size: 1rem;
    margin-bottom: 15px;
}

.post-meta {
    font-size: 0.9rem;
    color: #ffd580;
}

@@media (max-width: 768px) {
    .post-card {
        padding: 15px;
    }
}
</style>
</head>
<body>

<div class="container">
    <div class="post-card">
        <div class="post-title">@Model.Title</div>

        @if (!string.IsNullOrEmpty(Model.Profile))
        {
            <div class="post-img-wrapper">
                <img src="@Model.Profile" class="post-img" />
            </div>
        }
        else
        {
            <div class="post-img d-flex justify-content-center align-items-center" 
                 style="background-color:#394263; color:#ffd580; padding:60px 0; border-radius:12px;">
                تصویر ندارد
            </div>
        }

        <div class="post-desc">@Model.Description</div>
        <div class="post-meta">دسته‌بندی: @Model.CategoryTitle | تاریخ: @Model.CreateAt.ToPersianDate()</div>
    </div>
</div>

</body>
</html>


