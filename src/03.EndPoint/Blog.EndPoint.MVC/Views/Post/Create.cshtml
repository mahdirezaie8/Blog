@model CreatePostViewModel
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>ایجاد پست جدید</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazir-font@v30.1.0/dist/font-face.css" rel="stylesheet" />

    <style>
        body {
            background-color: #3b4a6b;
            font-family: Vazir, sans-serif;
        }

        .form-card {
            width: 450px;
            background: #526180;
            padding: 25px;
            border-radius: 12px;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.35);
        }

        .btn-submit {
            background-color: #ff8c42;
            color: #fff;
            transition: .2s;
        }

            .btn-submit:hover {
                background-color: #e57620;
            }

        label {
            color: #fff;
            margin-bottom: 5px;
        }

        .form-control, .form-select {
            background: #f3f3f3;
            border: none;
        }
    </style>
</head>

<body>

    <div class="d-flex justify-content-center align-items-center vh-100">
        <div class="form-card">

            <h3 class="text-center text-white mb-4">ایجاد پست جدید</h3>

            <form asp-action="Create" method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <label>عنوان پست</label>
                    <input type="text" name="Title" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label>توضیح پست</label>
                    <textarea name="Description" class="form-control" rows="4" required></textarea>
                </div>

                <div class="mb-3">
                    <label>عکس پست</label>
                    <input type="file" name="ProfileImage" class="form-control" accept="image/*" />
                </div>

                <div class="mb-4">
                    <label>دسته‌بندی</label>
                    <select name="CategoryId" class="form-select" required>
                        <option value="">انتخاب دسته‌بندی...</option>

                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Id">@category.Title</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-submit w-100">ثبت پست</button>
            </form>

            <div id="message-box" class="mt-4 text-center text-sm">
                <div style="color:red">@TempData["Error"]</div>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
